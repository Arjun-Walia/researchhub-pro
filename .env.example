# ResearchHub Pro Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database
DATABASE_URL=sqlite:///researchhub.db
# For PostgreSQL: postgresql://username:password@localhost:5432/researchhub

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# External APIs
PERPLEXITY_API_KEY=your-perplexity-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
PERPLEXITY_SHARED_API_KEY=your-shared-perplexity-api-key-if-applicable
PERPLEXITY_API_BASE_URL=https://api.perplexity.ai
PERPLEXITY_VALIDATE_KEYS=true
PERPLEXITY_VALIDATION_TIMEOUT=8

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@researchhub.com

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Application Settings
LOG_LEVEL=DEBUG
DEFAULT_SEARCH_RESULTS=10
MAX_SEARCH_RESULTS=100
